                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nom :">
                    <font>
                        <Font name="Arial" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="5.0" />
                    </VBox.margin>
                </Text>
                <TextField fx:id="nomField" alignment="TOP_LEFT" promptText="Saisir nom" styleClass="form-control" />
            </VBox>


        </HBox>

        <HBox>

            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Photo :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <HBox alignment="CENTER_LEFT">
                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#chooseImage"
