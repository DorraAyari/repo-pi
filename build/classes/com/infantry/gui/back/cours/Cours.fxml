            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Poids :">
                    <font>
                        <Font name="Arial" size="18.0" />
                    </font>
                    <VBox.margin>
