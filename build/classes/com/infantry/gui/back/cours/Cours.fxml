                    <font>
                        <Font name="Arial" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="5.0" />
                    </VBox.margin>
                </Text>
                <TextField fx:id="descriptionField" promptText="Saisir description" styleClass="form-control" />
