                <ComboBox fx:id="coachComboBox" layoutX="170" layoutY="122" prefHeight="25" prefWidth="150" promptText="NomCoach" styleClass="form-control" />
            </VBox>

        </HBox>
    </VBox>
    
    <Button fx:id="btnAjout" layoutX="265.0" layoutY="434.0" mnemonicParsing="false" onAction="#ajouter"
            prefHeight="51.0" prefWidth="150.0" styleClass="success-button" text="manipulation" textAlignment="CENTER"
            textFill="WHITE" wrapText="true" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="260.0"
            AnchorPane.rightAnchor="260.0"/>
